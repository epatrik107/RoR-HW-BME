<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= link_to "Show this product", product %>
    </p>
  <% end %>
</div>

  <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
              <%= paginate @products %>
            </ul>
          </nav>

