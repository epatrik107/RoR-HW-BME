<div class="container">
  <h1>Kosár</h1>
  <% if @order_items.any? %>
    <ul class="list-group">
      <% @order_items.each do |item| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= item.product.name %> - <%= item.quantity %> db
          <div>
            <%= link_to 'Törlés', order_item_path(item), method: :delete, class: 'btn btn-danger btn-sm' %>
          </div>
        </li>
      <% end %>
    </ul>
    <p class="mt-3">Összesen: <%= @order_items.sum { |item| item.product.price * item.quantity } %> Ft</p>
  <% else %>
    <p>A kosár üres.</p>
  <% end %>
  <%= link_to 'Vissza!', root_path, class: 'btn btn-primary mt-3' %>
</div>

